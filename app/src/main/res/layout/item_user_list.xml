<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/white_ripple"
    android:clickable="true"
    android:focusable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_username_tip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:text="用  户  名"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintLeft_toRightOf="@id/tv_username_tip"
            app:layout_constraintTop_toTopOf="@id/tv_username_tip" />

        <TextView
            android:id="@+id/tv_realname_tip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="真实姓名"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintLeft_toLeftOf="@id/tv_username_tip"
            app:layout_constraintTop_toBottomOf="@id/tv_username_tip" />

        <TextView
            android:id="@+id/tv_realname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintLeft_toRightOf="@id/tv_realname_tip"
            app:layout_constraintTop_toTopOf="@id/tv_realname_tip" />

        <TextView
            android:id="@+id/tv_title_tip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="职　　称"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintLeft_toLeftOf="@id/tv_realname_tip"
            app:layout_constraintTop_toBottomOf="@id/tv_realname_tip" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintLeft_toRightOf="@id/tv_title_tip"
            app:layout_constraintTop_toTopOf="@id/tv_title_tip" />

        <TextView
            android:id="@+id/tv_mobile_tip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="联系方式"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tv_title_tip"
            app:layout_constraintTop_toBottomOf="@id/tv_title_tip" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintLeft_toRightOf="@id/tv_mobile_tip"
            app:layout_constraintTop_toTopOf="@id/tv_mobile_tip" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>